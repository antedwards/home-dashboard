# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Public Environment Variables (for both apps)
PUBLIC_SUPABASE_URL=https://your-project.supabase.co
PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
PUBLIC_APP_URL=https://your-app-url.com

# Private Environment Variables (server-side only)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# CalDAV Password Encryption
# REQUIRED: Generate a random string (at least 32 characters)
# Example: openssl rand -hex 32
CALDAV_ENCRYPTION_KEY=your-random-encryption-key-here

# Cron Job Secret (optional, for automatic calendar sync)
# Example: openssl rand -hex 32
CRON_SECRET=your-cron-secret-here

# Development
NODE_ENV=development

# Optional: External APIs
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
WEATHER_API_KEY=
GOOGLE_CALENDAR_CLIENT_ID=
GOOGLE_CALENDAR_CLIENT_SECRET=
