{
  "name": "@home-dashboard/electron",
  "version": "0.1.0",
  "private": true,
  "description": "Home Dashboard - Desktop Application",
  "homepage": "https://github.com/antedwards/home-dashboard",
  "author": {
    "name": "Ant Edwards",
    "email": "admin@trinkettree.co.uk"
  },
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "preview": "vite preview",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "electron:dev": "vite",
    "electron:build": "vite build && electron-builder",
    "postinstall": "[ -n \"$CF_PAGES\" ] && echo 'Skipping electron build on Cloudflare Pages' || (bash scripts/compile-whisper.sh && npm run download:models)",
    "compile:whisper": "bash scripts/compile-whisper.sh",
    "download:models": "npx whisper-node download"
  },
  "dependencies": {
    "@home-dashboard/database": "workspace:*",
    "@home-dashboard/sync": "workspace:*",
    "@home-dashboard/ui": "workspace:*",
    "better-sqlite3": "^11.7.0",
    "electron-updater": "^6.3.9",
    "whisper-node": "^1.1.1"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@types/better-sqlite3": "^7.6.12",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "svelte": "^5.2.9",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.homedashboard.app",
    "productName": "Home Dashboard",
    "protocols": {
      "name": "Home Dashboard",
      "schemes": [
        "homedashboard-family"
      ]
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "${env.HOME}/.cache/whisper-node",
        "to": "whisper-models",
        "filter": ["**/*"]
      }
    ],
    "publish": {
      "provider": "generic",
      "url": "${env.UPDATE_SERVER_URL}",
      "channel": "latest"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "maintainer": "Ant Edwards <admin@trinkettree.co.uk>",
      "executableName": "home-dashboard",
      "artifactName": "home-dashboard-${version}-${arch}.${ext}"
    }
  }
}
